<!DOCTYPE html>
<html>
<head>
  <title>Todos</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/redmond/jquery-ui.css"%>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if logged_in? %>
  <div style="float: right;">
    <%= link_to "Home", todo_lists_path %> | <%= link_to "My Account", edit_account_path(current_user.account) %> | You are logged in as <%= current_user.login %> |
    <%= link_to "Logout", logout_path, method: :delete %>
  </div>
<% end %>

<% flash.each do |key, value| %>
  <%= content_tag :p, value, class: key %>
<% end %>

<%= yield %>

</body>
</html>
