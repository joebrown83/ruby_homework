<div style="padding-top: 15px;">
  <%= "#{@todo_list.list_due_date}" %>
  <%= content_tag :span, "#{@todo_list.list_name}", style: "font:bold 15px arial, sans-serif;" %>
  <%= link_to 'Add Todo Item', new_todo_list_todo_item_path(@todo_list) %>
</div>

<div id="todo_items_list" style="padding-top:15px;">
  <% @todo_items.each do |todo_item| %>
          <% @todo_item = todo_item %>
          <div style="padding-top: 15px;">
          <%= render 'markdoneform' %>
          </div>
  <% end %>
</div>

<p/>
<%= will_paginate @todo_items %>

<br />

